@model BeautySalonApp.ViewModels.ServiceViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-3 pb-3">
<h1>Szczegóły usługi</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwa
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.ServiceName)
        </dd>
        <dt class="col-sm-2">
            Nazwa salonu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salon.Name)
        </dd>
        <dt class="col-sm-2">
            Czas trwania (min)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.DurationMin)
        </dd>
        <dt class="col-sm-2">
            Cena
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Price)
        </dd>
        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Description)
        </dd>
        <dt class="col-sm-2">
            Pracownik
        </dt>
        <dd class="col-sm-10">
            @if (Model.Employee != null)
            {
                @Model.Employee.Name @Html.Raw("&nbsp;") @Model.Employee.Surname
            }
        </dd>
    </dl>
</div>

<div>
    <form asp-action="Create" asp-controller="Reservations">
        <input type="hidden" asp-for="Reservation.ServiceId" value="@Model.Service.Id" />
    </form>
</div>

<div>
    <a asp-action="Create" asp-controller="Reservations" asp-route-serviceId="@Model?.Service.Id" class="btn btn-primary">Zarezerwuj wizytę</a>
</div>
</div>