@model BeautySalonApp.ViewModels.SalonViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-3 pb-3">
<h1>Edit</h1>

<h4>Salon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Salon.Id" value="@ViewData["UserId"]" />
            <div class="form-group">
                <label asp-for="Salon.Name" class="control-label"></label>
                <input asp-for="Salon.Name" class="form-control" />
                <span asp-validation-for="Salon.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salon.Description" class="control-label"></label>
                <input asp-for="Salon.Description" class="form-control" />
                <span asp-validation-for="Salon.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salon.PhoneNumber" class="control-label"></label>
                <input asp-for="Salon.PhoneNumber" class="form-control" />
                <span asp-validation-for="Salon.PhoneNumber" class="text-danger"></span>
            </div>
            <h4>Address</h4>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label">City</label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.PostalCode" class="control-label">Postal Code</label>
                <input asp-for="Address.PostalCode" class="form-control" />
                <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Street" class="control-label">Street</label>
                <input asp-for="Address.Street" class="form-control" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.BuildingNumber" class="control-label">Building Number</label>
                <input asp-for="Address.BuildingNumber" class="form-control" />
                <span asp-validation-for="Address.BuildingNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Apartment" class="control-label">Apartment</label>
                <input asp-for="Address.Apartment" class="form-control" />
                <span asp-validation-for="Address.Apartment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</div>