@model BeautySalonApp.ViewModels.SalonViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-3 pb-3">
<h1>Nie posiadasz jeszcze salonu</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Salon.UserId" class="control-label"><h4>Tworzenie salonu</h4></label>
            <input type="hidden" asp-for="Salon.UserId" class="form-control" value="@ViewData["UserId"]" />
            <span asp-validation-for="Salon.UserId" class="text-danger"></span>
            
            <div class="form-group">
                <label asp-for="Salon.Name" class="control-label">Nazwa</label>
                <input asp-for="Salon.Name" class="form-control" />
                <span asp-validation-for="Salon.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salon.Description" class="control-label">Opis</label>
                <input asp-for="Salon.Description" class="form-control" />
                <span asp-validation-for="Salon.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salon.PhoneNumber" class="control-label">Numer telefonu</label>
                <input asp-for="Salon.PhoneNumber" class="form-control" />
                <span asp-validation-for="Salon.PhoneNumber" class="text-danger"></span>
            </div>
            <p> </p>
            <h4>Adres</h4>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label">Miejscowość</label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.PostalCode" class="control-label">Kod pocztowy</label>
                <input asp-for="Address.PostalCode" class="form-control" />
                <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Street" class="control-label">Ulica</label>
                <input asp-for="Address.Street" class="form-control" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.BuildingNumber" class="control-label">Numer budynku</label>
                <input asp-for="Address.BuildingNumber" class="form-control" />
                <span asp-validation-for="Address.BuildingNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.Apartment" class="control-label">Numer lokalu</label>
                <input asp-for="Address.Apartment" class="form-control" />
                <span asp-validation-for="Address.Apartment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz salon" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</div>