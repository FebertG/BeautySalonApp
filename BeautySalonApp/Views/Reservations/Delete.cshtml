@model BeautySalonApp.Models.Reservation

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-3 pb-3">
<h1>Anulowanie rezerwacji</h1>

<h3>Jesteś pewny że chcesz anulować wybraną rezerwację?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Rozpoczęcie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-2">
            Zakończenie
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class = "col-sm-2">
            Usługa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service.ServiceName)
        </dd>
        <dt class = "col-sm-2">
            Cena
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Anuluj rezerwację" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót</a>
    </form>
</div>
</div>