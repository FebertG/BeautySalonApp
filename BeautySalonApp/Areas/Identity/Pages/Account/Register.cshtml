@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}
<div class="container mt-3 pb-3">
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Stwórz nowe konto</h2>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control black-text" />
                <label asp-for="Input.FirstName" class="black-text">Imię</label>
                <span asp-validation-for="Input.FirstName" class="text-danger black-text"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control black-text" />
                <label asp-for="Input.LastName" class="black-text">Nazwisko</label>
                <span asp-validation-for="Input.LastName" class="text-danger black-text"></span>
            </div>
            
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control black-text" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="black-text">E-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control black-text" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" class="black-text">Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger black-text"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control black-text" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="black-text">Powtórz hasło</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger black-text"></span>
            </div>

            

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Zarejestruj się</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</div>